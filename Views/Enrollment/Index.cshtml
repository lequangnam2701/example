@using eLearning.Models.ViewModels
@model EnrollmentFormViewModel

<div class="container-fluid bg-primary py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Enrollment</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Enrollment</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Enrollment Form</h6>
            <h1 class="mb-5">Enrollment For New Student</h1>
        </div>
        <div class="row g-4">

            <div class="container col-lg-8 col-md-12 wow fadeInUp" data-wow-delay="0.5s">
                <form asp-action="Index" enctype="multipart/form-data">
                    <div class="row g-3">
                        <!-- Email -->
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="Email" class="form-control" placeholder="Your Email" />
                                <label asp-for="Email">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Name -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control" placeholder="Your Name" />
                                <label asp-for="Name">Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Date of Birth -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth" />
                                <label asp-for="DateOfBirth">Date of Birth</label>
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Gender -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select asp-for="Gender" class="form-control">
                                    <option value="" disabled selected>Select Gender</option>
                                    <option value="1">Male</option>
                                    <option value="2">Female</option>
                                    <option value="3">Other</option>
                                </select>
                                <label asp-for="Gender">Gender</label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Admission for -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select asp-for="FieldId" class="form-control" asp-items="ViewBag.Fields">
                                    <option value="" disabled selected>Select Stream/Field</option>
                                </select>
                                <label asp-for="FieldId">Admission for</label>
                                <span asp-validation-for="FieldId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Address Fields -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Address.State" class="form-control" placeholder="State" />
                                <label asp-for="Address.State">State</label>
                                <span asp-validation-for="Address.State" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Address.City" class="form-control" placeholder="City" />
                                <label asp-for="Address.City">City</label>
                                <span asp-validation-for="Address.City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input asp-for="Address.Street" class="form-control" placeholder="Street" />
                                <label asp-for="Address.Street">Street</label>
                                <span asp-validation-for="Address.Street" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Previous Exam Details -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="EnrollmentDetails.University" class="form-control" placeholder="University" />
                                <label asp-for="EnrollmentDetails.University">University</label>
                                <span asp-validation-for="EnrollmentDetails.University" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="EnrollmentDetails.EnrollmentNumber" class="form-control" placeholder="Enrollment Number" />
                                <label asp-for="EnrollmentDetails.EnrollmentNumber">Enrollment Number</label>
                                <span asp-validation-for="EnrollmentDetails.EnrollmentNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="EnrollmentDetails.Field" class="form-control" placeholder="Stream" />
                                <label asp-for="EnrollmentDetails.Field">Stream/Field</label>
                                <span asp-validation-for="EnrollmentDetails.Field" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="EnrollmentDetails.MarksSecured" class="form-control" placeholder="Marks Secured" />
                                <label asp-for="EnrollmentDetails.MarksSecured">Marks Secured</label>
                                <span asp-validation-for="EnrollmentDetails.MarksSecured" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100 py-3">Submit</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}